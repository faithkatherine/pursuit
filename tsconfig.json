{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "baseUrl": ".",
    "paths": {
      "components/*": ["./components/*"],
      "screens/*": ["./screens/*"],
      "assets/*": ["./assets/*"],
      "hooks/*": ["./hooks/*"],
      "utils/*": ["./utils/*"],
      "types/*": ["./types/*"],
      "constants/*": ["./constants/*"],
      "themes/*": ["./themes/*"],
      "graphql/*": ["./graphql/*"],
      "contexts/*": ["./contexts/*"],
      "server/*": ["./server/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["**/*.ts", "**/*.tsx", "types/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "**/__tests__/**/*",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
