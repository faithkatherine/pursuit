{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "pursuit/*": ["./*"]
    }
  },
  "include": [
    "components/**/*",
    "themes/**/*",
    "assets/**/*",
    "types/**/*",
    "**/*.test.tsx",
    "**/*.test.ts"
  ],
  "exclude": [
    "node_modules",
    "apps/*/node_modules"
  ]
}