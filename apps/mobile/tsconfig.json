{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "pursuit/components/*": ["../../components/*"],
      "pursuit/themes/*": ["../../themes/*"],
      "pursuit/assets/*": ["../../assets/*"],
      //"pursuit/hooks/*": ["../../hooks/*"],
      //"pursuit/utils/*": ["../../utils/*"],
      //"pursuit/types/*": ["../../types/*"],
      //"pursuit/constants/*": ["../../constants/*"],
      "components/*": ["./components/*"],
      "screens/*": ["./screens/*"],
      "assets/*": ["./assets/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts"
  ]
}
