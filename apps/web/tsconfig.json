{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "pursuit/components/*": ["../../components/*"],
      "pursuit/themes/*": ["../../themes/*"],
      "pursuit/assets/*": ["../../assets/*"],
      "pursuit/hooks/*": ["../../hooks/*"],
      "pursuit/utils/*": ["../../utils/*"],
      "pursuit/types/*": ["../../types/*"],
      "pursuit/constants/*": ["../../constants/*"],
      "components/*": ["./src/components/*"],
      "pages/*": ["./src/pages/*"],
      "assets/*": ["./public/*"],
      "src/*": ["./src/*"]
    }
  },
  "include": [
    "src"
  ]
}
