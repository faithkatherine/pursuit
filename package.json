{
  "name": "pursuit",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"yarn dev:mobile\" \"yarn dev:web\" \"yarn dev:server\"",
    "dev:mobile": "cd apps/mobile && yarn start",
    "dev:web": "cd apps/web && yarn start",
    "dev:server": "ts-node server/index.ts",
    "android": "cd apps/mobile && expo start --android",
    "ios": "cd apps/mobile && expo start --ios",
    "web": "cd apps/web && expo start --web",
    "build": "yarn build:web && yarn build:mobile",
    "build:web": "cd apps/web && yarn build",
    "build:mobile": "cd apps/mobile && yarn build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit",
    "install-all": "yarn && cd apps/mobile && yarn && cd ../web && yarn"
  },
  "dependencies": {
    "@apollo/client": "^3.8.6",
    "@react-native-picker/picker": "^2.11.1",
    "apollo-server-express": "^3.12.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "react-hook-form": "^7.62.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-flow-strip-types": "^7.27.1",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/react-native": "^12.4.0",
    "@types/express": "^4.17.18",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-expo": "^7.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "react-test-renderer": "^18.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
